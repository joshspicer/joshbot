{
  "name": "joshbot",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "1.3.0",
  "publisher": "spcr-test",
  "license": "MIT",
  "engines": {
    "vscode": "^1.102.0"
  },
  "enabledApiProposals": [
    "chatSessionsProvider",
    "chatParticipantAdditions",
    "chatParticipantPrivate",
    "remoteCodingAgents",
    "languageModelThinkingPart"
  ],
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onChatSession:josh-bot",
    "*"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "remoteCodingAgents": [
      {
        "id": "josh-bot",
        "name": "%remoteCodingAgent.displayName%",
        "displayName": "%remoteCodingAgent.displayName%",
        "command": "joshbot.cloudButton",
        "when": "config.joshbot.contributeCloudButton"
      }
    ],
    "chatSessions": [
      {
        "type": "josh-bot",
        "name": "joshbot",
        "displayName": "%chatSession.displayName%",
        "description": "%chatSession.description%",
        "when": "config.joshbot.contributeChatSessions",
        "commands": [
          {
            "name": "secrets",
            "description": "%chatSession.command.secrets.description%"
          },
          {
            "name": "set-secret",
            "description": "%chatSession.command.setSecret.description%"
          }
        ],
        "capabilities": {
          "supportsFileAttachments": true
        }
      }
    ],
    "commands": [
      {
        "command": "joshbot.hello",
        "title": "%command.hello.title%",
        "category": "%command.hello.category%"
      },
      {
        "command": "joshbot.cloudButton",
        "title": "%command.cloudButton.title%",
        "category": "%command.cloudButton.category%"
      },
      {
        "command": "joshbot.snake",
        "title": "%command.snake.title%",
        "category": "%command.snake.category%",
        "icon": "$(snake)"
      },
      {
        "command": "joshbot.squirrel",
        "title": "%command.squirrel.title%",
        "category": "%command.squirrel.category%",
        "icon": "$(squirrel)"
      }
    ],
    "configuration": {
      "title": "JoshBot",
      "properties": {
        "joshbot.contributeChatSessions": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.contributeChatSessions.description%"
        },
        "joshbot.contributeCloudButton": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.contributeCloudButton.description%"
        }
      }
    },
    "menus": {
      "chat/multiDiff/context": [
        {
          "command": "joshbot.squirrel",
          "when": "chatSessionType == josh-bot"
        },
        {
          "command": "joshbot.snake",
          "when": "chatSessionType == josh-bot"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "deploy": "vsce publish",
    "postinstall": "npm run downloadapi",
    "downloadapi": "node ./node_modules/@vscode/dts/index.js main && node ./node_modules/@vscode/dts/index.js dev"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@vscode/dts": "^0.4.1",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.8.0"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshspicer/joshbot.git"
  }
}
