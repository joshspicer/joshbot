{
  "name": "joshbot",
  "displayName": "%joshbot.displayName%",
  "description": "%joshbot.description%",
  "version": "1.3.0",
  "publisher": "spcr-test",
  "license": "MIT",
  "engines": {
    "vscode": "^1.102.0"
  },
  "enabledApiProposals": [
    "chatSessionsProvider",
    "chatParticipantAdditions",
    "chatParticipantPrivate",
    "remoteCodingAgents",
    "languageModelThinkingPart"
  ],
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onChatSession:josh-bot",
    "*"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "remoteCodingAgents": [
      {
        "id": "josh-bot",
        "name": "%joshbot.remoteCodingAgent.name%",
        "displayName": "%joshbot.remoteCodingAgent.displayName%",
        "command": "joshbot.cloudButton",
        "when": "config.joshbot.contributeCloudButton"
      }
    ],
    "chatSessions": [
      {
        "type": "josh-bot",
        "name": "%joshbot.chatSession.name%",
        "displayName": "%joshbot.chatSession.displayName%",
        "description": "%joshbot.chatSession.description%",
        "when": "config.joshbot.contributeChatSessions"
      }
    ],
    "commands": [
      {
        "command": "joshbot.hello",
        "title": "%joshbot.command.hello.title%",
        "category": "%joshbot.category%"
      },
      {
        "command": "joshbot.cloudButton",
        "title": "%joshbot.command.cloudButton.title%",
        "category": "%joshbot.category%"
      },
      {
        "command": "joshbot.snake",
        "title": "%joshbot.command.snake.title%",
        "category": "%joshbot.category%",
        "icon": "$(snake)"
      },
      {
        "command": "joshbot.squirrel",
        "title": "%joshbot.command.squirrel.title%",
        "category": "%joshbot.category%",
        "icon": "$(squirrel)"
      }
    ],
    "configuration": {
      "title": "%joshbot.configuration.title%",
      "properties": {
        "joshbot.contributeChatSessions": {
          "type": "boolean",
          "default": true,
          "description": "%joshbot.configuration.contributeChatSessions.description%"
        },
        "joshbot.contributeCloudButton": {
          "type": "boolean",
          "default": true,
          "description": "%joshbot.configuration.contributeCloudButton.description%"
        }
      }
    },
    "menus": {
      "chat/multiDiff/context": [
        {
          "command": "joshbot.squirrel",
          "when": "chatSessionType == josh-bot"
        },
        {
          "command": "joshbot.snake",
          "when": "chatSessionType == josh-bot"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "deploy": "vsce publish",
    "postinstall": "npm run downloadapi",
    "downloadapi": "npx vscode-dts dev"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/dts": "^0.4.1",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.35.0",
    "typescript": "^5.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshspicer/joshbot.git"
  }
}
