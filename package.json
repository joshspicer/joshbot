{
  "name": "joshbot",
  "displayName": "Josh Bot",
  "description": "A dedicated coding assistant great at complex tasks",
  "version": "1.3.0",
  "publisher": "spcr-test",
  "license": "MIT",
  "engines": {
    "vscode": "^1.102.0"
  },
  "enabledApiProposals": [
    "chatSessionsProvider",
    "chatParticipantAdditions",
    "chatParticipantPrivate",
    "remoteCodingAgents",
    "languageModelThinkingPart"
  ],
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onChatSession:josh-bot",
    "*"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "remoteCodingAgents": [
      {
        "id": "josh-bot",
        "name": "Josh Bot",
        "displayName": "Josh Bot",
        "command": "joshbot.cloudButton",
        "when": "config.joshbot.contributeCloudButton"
      }
    ],
    "chatSessions": [
      {
        "type": "josh-bot",
        "name": "joshbot",
        "displayName": "Josh Bot",
        "description": "A dedicated coding assistant great at complex tasks",
        "when": "config.joshbot.contributeChatSessions"
      }
    ],
    "commands": [
      {
        "command": "joshbot.hello",
        "title": "Hello",
        "category": "JoshBot"
      },
      {
        "command": "joshbot.cloudButton",
        "title": "Cloud Button",
        "category": "JoshBot"
      },
      {
        "command": "joshbot.snake",
        "title": "Snake!",
        "category": "JoshBot",
        "icon": "$(snake)"
      },
      {
        "command": "joshbot.squirrel",
        "title": "Squirrel!",
        "category": "JoshBot",
        "icon": "$(squirrel)"
      },
      {
        "command": "joshbot.rainbow",
        "title": "Rainbow Colors",
        "category": "JoshBot",
        "icon": "$(symbol-color)"
      },
      {
        "command": "joshbot.palette",
        "title": "Color Palette",
        "category": "JoshBot",
        "icon": "$(paintcan)"
      },
      {
        "command": "joshbot.colorPicker",
        "title": "Color Picker",
        "category": "JoshBot",
        "icon": "$(color-mode)"
      },
      {
        "command": "joshbot.seasonalTheme",
        "title": "Apply Seasonal Theme",
        "category": "JoshBot",
        "icon": "$(calendar)"
      }
    ],
    "configuration": {
      "title": "JoshBot",
      "properties": {
        "joshbot.contributeChatSessions": {
          "type": "boolean",
          "default": true,
          "description": "Enable to contribute chat sessions and a dynamic chat participant."
        },
        "joshbot.contributeCloudButton": {
          "type": "boolean",
          "default": true,
          "description": "Enable to contribute a cloud button for Josh Bot."
        },
        "joshbot.theme.primaryColor": {
          "type": "string",
          "default": "#007ACC",
          "description": "Primary color for JoshBot theme."
        },
        "joshbot.theme.accentColor": {
          "type": "string",
          "default": "#FF6B6B",
          "description": "Accent color for JoshBot theme."
        },
        "joshbot.theme.enableColorfulResponses": {
          "type": "boolean",
          "default": true,
          "description": "Enable colorful markdown responses in chat."
        },
        "joshbot.theme.statusBarColor": {
          "type": "string",
          "enum": ["auto", "primary", "accent"],
          "default": "auto",
          "description": "Color theme for status bar indicator."
        },
        "joshbot.accessibility.highContrast": {
          "type": "boolean",
          "default": false,
          "description": "Enable high contrast mode for better accessibility."
        }
      }
    },
    "menus": {
      "chat/multiDiff/context": [
        {
          "command": "joshbot.squirrel",
          "when": "chatSessionType == josh-bot"
        },
        {
          "command": "joshbot.snake",
          "when": "chatSessionType == josh-bot"
        },
        {
          "command": "joshbot.rainbow",
          "when": "chatSessionType == josh-bot"
        },
        {
          "command": "joshbot.palette",
          "when": "chatSessionType == josh-bot"
        },
        {
          "command": "joshbot.seasonalTheme",
          "when": "chatSessionType == josh-bot"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "deploy": "vsce publish",
    "postinstall": "npm run downloadapi",
    "downloadapi": "npx vscode-dts dev"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/node": "16.x",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.8.0",
    "@vscode/dts": "^0.4.1"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/joshspicer/joshbot.git"
  }
}
