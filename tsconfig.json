{
	"compilerOptions": {
		"jsx": "react",
		"jsxFactory": "vscpp",
		"jsxFragmentFactory": "vscppf",
		"target": "es2020",
		"module": "commonjs",
		"strict": true,
		"sourceMap": true,
		"outDir": "out",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "vscode.d.ts", "vscode.proposed.*"]
}