{
  "name": "joshbot",
  "displayName": "Josh Bot",
  "description": "A dedicated coding assistant great at complex tasks",
  "version": "1.3.0",
  "publisher": "spcr-test",
  "license": "MIT",
  "engines": {
    "vscode": "^1.102.0"
  },
  "enabledApiProposals": [
    "chatSessionsProvider",
    "chatParticipantAdditions",
    "chatParticipantPrivate",
    "remoteCodingAgents",
    "languageModelThinkingPart"
  ],
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onChatSession:josh-bot",
    "*"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "remoteCodingAgents": [
      {
        "id": "josh-bot",
        "name": "Josh Bot",
        "displayName": "Josh Bot",
        "command": "joshbot.cloudButton",
        "when": "config.joshbot.contributeCloudButton"
      }
    ],
    "chatSessions": [
      {
        "type": "josh-bot",
        "name": "joshbot",
        "displayName": "Josh Bot",
        "description": "A dedicated coding assistant great at complex tasks",
        "when": "config.joshbot.contributeChatSessions",
        "commands": [
          {
            "name": "secrets",
            "description": "List stored secret keys"
          },
          {
            "name": "set-secret",
            "description": "Store a secret: /set-secret <key> <value>"
          }
        ],
        "capabilities": {
          "supportsFileAttachments": true
        }
      }
    ],
    "commands": [
      {
        "command": "joshbot.hello",
        "title": "Hello",
        "category": "JoshBot"
      },
      {
        "command": "joshbot.cloudButton",
        "title": "Cloud Button",
        "category": "JoshBot"
      },
      {
        "command": "joshbot.snake",
        "title": "Snake!",
        "category": "JoshBot",
        "icon": "$(snake)"
      },
      {
        "command": "joshbot.squirrel",
        "title": "Squirrel!",
        "category": "JoshBot",
        "icon": "$(squirrel)"
      }
    ],
    "configuration": {
      "title": "JoshBot",
      "properties": {
        "joshbot.contributeChatSessions": {
          "type": "boolean",
          "default": true,
          "description": "Enable to contribute chat sessions and a dynamic chat participant."
        },
        "joshbot.contributeCloudButton": {
          "type": "boolean",
          "default": true,
          "description": "Enable to contribute a cloud button for Josh Bot."
        }
      }
    },
    "menus": {
      "chat/multiDiff/context": [
        {
          "command": "joshbot.squirrel",
          "when": "chatSessionType == josh-bot"
        },
        {
          "command": "joshbot.snake",
          "when": "chatSessionType == josh-bot"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "deploy": "vsce publish",
    "postinstall": "npm run downloadapi",
    "downloadapi": "node ./node_modules/@vscode/dts/index.js main && node ./node_modules/@vscode/dts/index.js dev"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/dts": "^0.4.1",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.38.0",
    "typescript": "^5.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshspicer/joshbot.git"
  }
}
